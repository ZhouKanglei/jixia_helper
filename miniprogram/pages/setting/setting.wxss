.tab {
	width: 100%;
	margin: 5rpx auto;
  padding: 28rpx 28rpx;
  padding-right: 60rpx;
	flex-direction: row;
  display: flex;
  background-color: #FFFF;
}

.tab text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tab_content {
  width: 100%;
  margin: 4rpx auto;
  padding: 28rpx 28rpx;
  background-color: #FFF;

}

.notice_title {
  
  text-align: center;
  line-height: 20px;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  color: #3197ed;
  font-weight: 600;
  font-family: fantasy;
  display: block;
}

.line {
  width: 100%;
  /* height: 10rpx;  */
  /* background:#00E0E0; */
  border-top:1px dotted #C0C0C0;
}

.notice_content {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-indent: 2em;
  line-height: 20px;
  display: block;
}

.tab_paragraph {
  margin-top: 20rpx;
}

.tab_date {
  margin-top: 20rpx;
  text-align: right;
}

.bnt_hover {
  background-color: #f5f5f5;
  box-shadow:0rpx 0rpx 10rpx;
  transition: all 0.1s ease-in-out;
}

.item_hidden {
  display: none;
}


.arrow {
  width: 18rpx;
  height: 18rpx;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  position: absolute;
  right: 30rpx;
  transform: rotate(45deg);
  margin-top: 10rpx;
}

.arrow_rotate {
  transform: rotate(135deg);
}

.adContainer {
  width: 100%;
}